@model WrapperModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css">
    <script src="main.js"></script>
</head>
<body>
    <partial name="NavPartial" view-data="ViewData"/>
    <div>
        <form asp-action="CreateActivity" asp-controller="Home" method="post">
            <h1>Create an Activity</h1>
            <div class="form-group">
                <span asp-validation-for="NewOccasion.Title"></span><br>
                <label asp-for="NewOccasion.Title"></label>
                <input class="form-control" asp-for="NewOccasion.Title"><br>
            </div>
            <div class="form-group">
                <span asp-validation-for="NewOccasion.Time"></span><br>
                <label asp-for="NewOccasion.Time"></label>
                <input class="form-control" asp-for="NewOccasion.Time"><br>
            </div>
            <div class="form-group">
                <span asp-validation-for="NewOccasion.Date"></span><br>
                <label asp-for="NewOccasion.Date"></label>
                <input class="form-control" asp-for="NewOccasion.Date"><br>
            </div>
            <div class="form-group">
                <span asp-validation-for="NewOccasion.DurationInt"></span><br>
                <label asp-for="NewOccasion.DurationInt"></label>
                <input class="form-control" asp-for="NewOccasion.DurationInt"><br>
                <select asp-for="NewOccasion.DurationString">
                    <option value="" selected disabled>Select</option>
                    <option value="Hours">Hours</option>
                    <option value="Minutes">Minutes</option>
                    <option value="Days">Days</option>
                </select>
            </div>
            <div class="form-group">
                <span asp-validation-for="NewOccasion.Description"></span><br>
                <label asp-for="NewOccasion.Description"></label>
                <input class="form-control" asp-for="NewOccasion.Description"><br>
            </div>
            <button class="btn btn-primary">Create Activity</button>
        </form>
    </div>
</body>
</html>